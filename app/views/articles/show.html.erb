<% content_for :title, @article.title  %>

<div class="container mx-auto px-5">
  <h2 class="text-3xl my-4"><%= @article.title %></h2>
  <p class="whitespace-pre-line">
    <%= auto_link(@article.content, html: {target: "_blank", class: ""}) %>
  </p>
  <h3 class="text-3xl my-4"><%= t("media") %></h3>
  <%= @article.medias.count == 0 ? t("no_media") : "" %>
  <% @article.medias.each do |media| %>
    <a href="<%= media %>" target="_blank" class="inline-block" aria-label="Click to open image in new tab">
      <% # TODO image alt %>
      <img src="<%= media %>" class="max-w-xs" />
    </a>
  <% end %>
</div>